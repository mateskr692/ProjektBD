<UserControl x:Class="Presentation.App.Controls.UserPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <TextBlock Grid.Column="1" Text="{Binding Path=CurrentUser}" VerticalAlignment="Top" Margin="0,10,20,0" HorizontalAlignment="Right"/>
            <!--<Button Grid.Column="2" Content="Log out" Command="{Binding Path=SignOutCommand}" Padding="5" Margin="5"/>-->
    </Grid>
</UserControl>
